{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "lib",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "baseUrl": "src/",
    "paths": {
      "components": ["src/components/*"]
    }
  },
  "exclude": ["node_modules", "lib", "**/*.stories.tsx"],
  "types": ["typePatches"]
}
